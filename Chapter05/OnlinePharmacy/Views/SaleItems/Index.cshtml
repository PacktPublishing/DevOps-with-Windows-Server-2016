@model IEnumerable<OnlinePharmacy.Models.SaleItem>

@{
    ViewBag.Title = "Drug sale line items..";
}

<h2>Drug Sale line items</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { id = ViewBag.SaleID })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Sale.SaleID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Drug.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sale.PatientName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Sale.SaleID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Drug.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sale.PatientName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.SaleItemID }) |
                @Html.ActionLink("Details", "Details", new { id = item.SaleItemID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.SaleItemID })
            </td>
        </tr>
    }

</table>
